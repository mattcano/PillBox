@model IList<MvcApplication1.Models.Book>

@{
    ViewBag.Title = "UpdateProducts";
}

<h2>Update Products</h2>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].Author)</th>
                                                    
            <th>@Html.DisplayNameFor(model => model[0].Title)</th>
                                                    
            <th>@Html.DisplayNameFor(model => model[0].DatePublished)</th>
        </tr>
        @for(int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>@Html.HiddenFor(model => model[i].Id)</td>
                <td>@Html.EditorFor(model => model[i].Author)</td>
                <td>@Html.EditorFor(model => model[i].Title)</td>
                <td>@Html.EditorFor(model => model[i].DatePublished)</td>
            </tr>
        }
    </table>
    
    <input type="submit" value="Save" />
}