<%= form_for(@medication) do |f| %>
  <% if @medication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medication.errors.count, "error") %> prohibited this medication from being saved:</h2>

      <ul>
      <% @medication.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
  <%= f.hidden_field(:user_id, :value => current_user.id) %>

  <div class="field">
    <%= f.label :name, "Medication Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :drug, "Drug Name" %><br />
    <%= f.text_field :drug %>
  </div>
  <div class="field">
    <%= f.label :dosage_quant, "Dose Quantity" %><br />
    <%= f.number_field :dosage_quant %>
  </div>

  <div><%= f.label :dosage_size, "Dose Units" %><br />
  <%= f.select(:dosage_size, options_for_select([["pills", "pills"], ["scoops", "scoops"], ["shot", "shot"], ["lozenge", "lozenge"], ["other", "other"]], "pills")) %></div>

  <div class="field">
    <%= f.label :bottle_size, "Bottle Size (same units as dose)" %><br />
    <%= f.number_field :bottle_size %>
  </div>

  <div class="field">
    <%= f.label :frequency %><br />
    <%= f.number_field :frequency %>
  </div>

  <div><%= f.label :period, "Period" %><br />
  <%= f.select(:period, options_for_select([["per day", "per day"], ["per week", "per week"], ["per month", "per month"]], "per day")) %></div>

  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
