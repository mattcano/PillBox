
<div class="meds-list">
  <h3>My Meds</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Drug</th>
        <th>Dosage</th>
        <th>Frequency</th>
        <th>Notes</th>
      </tr>
    </thead>
    <tbody>
      <% @meds_array.each_with_index do |med, index|%>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= med.name %></td>
          <td><%= med.drug %></td>
          <td><%= med.dosage_quant.to_s + " " + med.dosage_size %></td>
          <td><%= med.frequency.to_s + " " + med.period %></td>
          <td><%= med.notes %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

</div>